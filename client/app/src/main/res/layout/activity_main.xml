<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.danif.hoponcmu.MainActivity">

  <LinearLayout
    android:layout_width="345dp"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <Button
      android:id="@+id/button_locations"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginRight="20dp"
      android:layout_gravity="center"
      android:text="@string/action_location"
      android:textSize="12sp"/>

    <Button
      android:id="@+id/button_download_quizzes"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginRight="20dp"
      android:layout_gravity="center"
      android:text="@string/action_download_quizzes"
      android:textSize="12sp"/>

    <Button
      android:id="@+id/button_ranking"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/action_ranking"
      android:textSize="12sp"/>

  </LinearLayout>

  <ListView
    android:id="@+id/list_quizzes"
    android:layout_width="fill_parent"
    android:layout_height="316dp"
    android:layout_marginTop="15dp"></ListView>

  <LinearLayout
    android:layout_width="274dp"
    android:layout_height="49dp"
    android:layout_margin="25dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <Button
      android:id="@+id/button_finish_day"
      android:layout_width="130dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginRight="20dp"
      android:text="@string/action_finish_day"/>
    <Button
      android:id="@+id/button_logout"
      android:layout_width="125dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/action_logout"
      android:textSize="12sp"/>

  </LinearLayout>

</LinearLayout>
